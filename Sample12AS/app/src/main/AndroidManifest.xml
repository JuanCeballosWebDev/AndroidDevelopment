<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/ic_launcher"
        android:fullBackupContent="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true">
        <activity
            android:name=".AddressConsole"
            android:label="@string/title_activity_address_console"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddressEntry"
            android:label="@string/title_activity_address_entry" android:parentActivityName="@string/title_activity_address_console">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sccarbone.sample12.AddressMessage" />
        </activity>
    </application>

</manifest>